@page
@model IndexModel
@{
    ViewData["Title"] = "SIC43NT Demonstration";
}

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 5px;
        text-align: left;
    }

    #notavaliable_result {
    }

    #incorrect_result {
        background-color: darkred;
        color: white;
    }

    #correct_result {
        background-color: green;
        color: white;
    }
</style>

<h1>SIC43NT Demonstration</h1>
@if (@Model.MessageReport != "")
{
<h2>@Model.MessageReport</h2>
}
<table style="width:75%">
    <tr>
        <th>UID[7]</th>
        <td colspan="3">@Model.uid</td>
    </tr>
    <tr>
        <th>Default Key</th>
        <td colspan="3">@Model.default_key</td>
    </tr>
    <tr>
        <td> - </td>
        <td> From Tag </td>
        <td> From Server</td>
        <td> Result</td>
    </tr>
    <tr>
        <th>Tamper Flag(HEX)</th>
        <td>@Model.flagTamperTag</td>
        <td>@Model.flagTamperServer</td>
        <td id="@Model.flagTamper_result_color">@Model.flagTamperDecision</td>
    </tr>
    <tr>
        <th>Time Stamp(DEC)</th>
        <td>@Model.timeStampTag_str</td>
        <td>@Model.timeStampServer_str</td>
        <td id="@Model.timeStamp_result_color">@Model.timeStampDecision</td>
    </tr>
    <tr>
        <th>Rolling code(HEX)</th>
        <td>@Model.rollingCodeTag</td>
        <td>@Model.rollingCodeServer</td>
        <td id="@Model.rollingCode_result_color">@Model.rollingCodeDecision</td>
    </tr>
</table>
